{
    "compilerOptions": {
      "target": "ES5",
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "removeComments": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist"
  },
    "include": [
        "src",
        "tests/**/*"
    ],
    "exclude": [
      "node_modules"    
    ]
  }